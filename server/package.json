{
    "name": "dotlabs-proxy-app",
    "description": "dotlabs-proxy-app",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@octokit/rest": "^18.2.1",
        "@types/aws-lambda": "^8.10.68",
        "@types/node": "^14.14.16",
        "ajv": "^7.0.2",
        "aws-sdk": "^2.799.0",
        "jest-junit": "^12.0.0",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.12",
        "typescript": "^4.1.3",
        "webpack": "^5.11.1"
    },
    "devDependencies": {
        "jest": "^26.6.3",
        "webpack-cli": "^4.3.0"
    },
    "scripts": {
        "test": "jest",
        "build": "webpack",
        "package": "sam package --template-file template.yml --s3-bucket ${BUCKET_NAME} --output-template-file --region ${AWS_REGION} packaged.template.yml",
        "deploy": "sam deploy --template-file packaged.template.yml --stack-name dotlabs-proxy-app --capabilities CAPABILITY_IAM --parameter-overrides Stage=dev ProjectName=dotlabs-proxy-app authToken=authToken --no-fail-on-empty-changeset --region ${AWS_REGION}"
    },
    "jest": {
        "verbose": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleNameMapper": {
            "^@/(.+)$": "<rootDir>/src/$1"
        },
        "testRegex": ".*\\.test\\.ts$",
        "testEnvironment": "node",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "html",
            "json-summary",
            "clover"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
